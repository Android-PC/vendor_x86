 }
 
+/* static */
+keymaster_error_t TrustyKeymasterDevice::delete_key(const keymaster2_device_t* dev,
+                                                const keymaster_key_blob_t* key) {
+    return convert_device(dev)->delete_key(key);
+}
+
+/* static */
